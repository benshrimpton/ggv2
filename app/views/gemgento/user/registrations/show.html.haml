.container.user-account-container

  = render partial: "shared/checkout_header"
  = render partial: 'shared/flash_messages'

  .checkout-row.col-md-8.col-md-offset-2
    %h4.gold-text ACCOUNT INFO
    .col-md-12#account-info-row
      .col-md-2
        = "#{current_user.first_name} #{current_user.last_name}"
      .col-md-2
        = "#{current_user.email}"
      .col-md-2.col-md-offset-6
        %a{href: "/"} EDIT

    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put}) do |f|

      .col-md-4.col-md-offset-4
        .form-group
          = f.label :password, 'New Password'
          = f.password_field :password, :class => 'form-control'
        .form-group
          = f.label :password_confirmation, 'Confirm New Password'
          = f.password_field :password_confirmation, :class => 'form-control'
        .form-group
          = f.label :current_password, 'Current Password'
          = f.password_field :current_password, :class => 'form-control'
        .form-group
          = f.submit 'save changes', class: 'submit btn pull-right'
          .cancel
            = link_to 'cancel', '/user'


= render 'shared/footer'
