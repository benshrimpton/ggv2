.container-fluid
  .row.page-header
    .col-sm-8
      %h4.pull-left
        %span.glyphicon.glyphicon-tag
        = truncate(@product.name, omision: "...", length: 50)
    .col-sm-4.text-right
      %a.btn.btn-default.btn-primary{href: ""} Save Product 

  .row
    .col-sm-8
      .panel.panel-default
        .panel-heading
          %h6.pull-left= @product.name
          %span.pull-right
            %span Stock Level
            %span.badge 12
          .clear  
        .panel-body
          .row 
            .col-sm-6  
              %img.featured-image{ src: "https://www.jeffreyrudes.com//system/gemgento/asset_files/files/000/000/463/medium/352JJR2FWO14_010_2015_05_11_JEFFREYRUDES_ECOMMERCE_JACKET_11_1_010.jpg" , class: "img-responsive"} 
              %label Change Image Order
              .thumbs.sortable
                %img.thumbnail.pull-left{ src: "/prod_2.jpg" , class: "img-responsive", width: "90"} 
                %img.thumbnail.pull-left{ src: "/prod_3.jpg" , class: "img-responsive", width: "90"} 
                %img.thumbnail.pull-left{ src: "/prod_4.jpg" , class: "img-responsive", width: "90"} 

            .col-sm-6
              .form-group
                %label Product Name
                %input{type:"text", value: @product.name, class: "form-control"}
                %hr
                %b Product Id :
                %span.badge #{@product.id}
                %b Magento Id :
                %span.badge #{@product.magento_id}
                %b Type :
                %span.badge #{@product.magento_type}
                %hr
                %b SKU : 
                %span.badge #{@product.sku}
                %b PRICE :
                %span.badge #{@product.price}
                %hr
              .form-group
                %label Short Description
                %textarea{ value: @product.short_description, class: "form-control"}
                  = @product.short_description
              .form-group
                %label Description
                %textarea{ value: @product.description, class: "form-control"}
                  = @product.description

              
              - if @product.magento_type = "configurable"
                .form-group
                  %label Associated Simple Products
                  = @product.simple_products.each do |s|
                    .col-sm-4
                      %h5= s.name


    .col-sm-4 
      .panel.panel-default
        .panel-heading
          Product Media
        .panel-body
          .form-group
            %label Video ID (eg: YVUrB-3l0eE )
            %input#video-id{type: "text", value: "By7KvP3UksU", class: "form-control"}
          .form-group
            .lookbook-video
              %iframe{:allowfullscreen => "", :frameborder => "0", :height => "315", :src => "https://www.youtube.com/embed/By7KvP3UksU", :width => "560"}           
          .form-group
            %label Related Products
            %input#video-id{type: "text", value: "Search", class: "form-control"}
          .form-group
            %label Related Products
            #sortable
              %img.thumbnail.pull-left{ src: "https://www.jeffreyrudes.com//system/gemgento/asset_files/files/000/000/463/medium/352JJR2FWO14_010_2015_05_11_JEFFREYRUDES_ECOMMERCE_JACKET_11_1_010.jpg" , class: "img-responsive", width: "90"} 
              %img.thumbnail.pull-left{ src: "https://www.jeffreyrudes.com//system/gemgento/asset_files/files/000/000/463/medium/352JJR2FWO14_010_2015_05_11_JEFFREYRUDES_ECOMMERCE_JACKET_11_1_010.jpg" , class: "img-responsive", width: "90"} 
