.container-fluid
  .row.page-header
    .col-sm-6
      %h4.pull-left
        %span.glyphicon.glyphicon-globe
        Overview
    .col-sm-6.text-right
      %input#product-list-filter.form-control{placeholder: "Search"}

  .row
    .col-sm-12
      .panel.panel-default
        .panel-heading
          %h5 Your Site
        .panel-body
          .row
            .col-sm-8
              .macbook
                .store-preview-mask
            .col-sm-4
              .panel.panel-default
                .panel-heading
                  Latest Sales
                .panel-body
                  data      

    .col-sm-4
      .panel
        .panel-body
          %table.table.table-striped
            %thead
              %th
                %h4 Newly Added Products
              %th
              %th
            %tbody#product-list
              - @products.take(5).each do |p|
                %tr
                  %td
                    %img{ src: "https://www.jeffreyrudes.com//system/gemgento/asset_files/files/000/000/463/thumb/352JJR2FWO14_010_2015_05_11_JEFFREYRUDES_ECOMMERCE_JACKET_11_1_010.jpg" , width: "40"}
                  %td
                    = truncate(p.name, :length => 20)
                  %td
                    %span.glyphicon.glyphicon-eye-open  
    .col-sm-4
      .panel
        .panel-body
          %table.table.table-striped
            %thead
              %th
                %h4 Top Products
              %th
                %a{href:""}View Report
            %tbody#product-list
              - @products.take(5).each do |p|
                %tr
                  %td
                    %img{ src: "https://www.jeffreyrudes.com//system/gemgento/asset_files/files/000/000/463/thumb/352JJR2FWO14_010_2015_05_11_JEFFREYRUDES_ECOMMERCE_JACKET_11_1_010.jpg" , width: "40"}
                    = truncate(p.name, :length => 20)
                  %td
                    =p.sku  
      .col-sm-4
        .panel
          .panel-body
            %table.table.table-striped
              %thead
                %th
                  %h4 Best Selling Products
                %th
                  SKU
              %tbody#product-list
                - @products.take(5).each do |p|
                  %tr
                    %td
                      %img{ src: "https://www.jeffreyrudes.com//system/gemgento/asset_files/files/000/000/463/thumb/352JJR2FWO14_010_2015_05_11_JEFFREYRUDES_ECOMMERCE_JACKET_11_1_010.jpg" , width: "40"}
                      = truncate(p.name, :length => 20)
                    %td
                      =p.sku                               